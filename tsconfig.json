{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"],
      "@mui/*": ["node_modules/@mui/*"],
      "@dingdong-ds/*": ["packages/dingdong-ds/src/*"]
    }
  },
  "include": ["packages/*", "packages/dingdong-ds/src/@types/themeType.d.ts"],
  "exclude": ["node_modules"]
}
