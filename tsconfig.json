{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"],
      "@mui/material/*": ["packages/dingdong-ds/dist/@types/*"],
      "@mui/material": ["packages/dingdong-ds/dist/@types"],
      "@dingdong/design-system": ["packages/dingdong-ds/src"],
      "@dingdong/design-system/*": ["packages/dingdong-ds/src/*"]
    }
  },
  "include": ["apps/*", "packages/*"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "./packages/dingdong-ds" }
  ]
}
